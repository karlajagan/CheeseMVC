@{
}

<h1>My Cheese</h1>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>

@if (ViewBag.Cheeses.Count == 0)
{
    <p>There are no cheeses in the list!</p>
}

<ul>
    @foreach (KeyValuePair<string, string> cheese in ViewBag.cheeses)
    {
        <div>
            <label for="@cheese.Key">@cheese.Key  @cheese.Value</label>
            <input type="checkbox" id="@cheese.Key" value="@cheese.Key" />
        </div>
    }
</ul>

